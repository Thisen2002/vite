# Predictive Analysis Backend Environment Configuration

# ========================================
# SERVER CONFIGURATION
# ========================================
PREDICTION_PORT=7000
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crowd_predictions
DB_USER=postgres
DB_PASSWORD=9295

# ========================================
# DATA COLLECTION SETTINGS
# ========================================
# How often to generate mock data (milliseconds)
DATA_GENERATION_INTERVAL=60000

# How often to update predictions (milliseconds) 
PREDICTION_UPDATE_INTERVAL=10000

# ========================================
# EXTERNAL API CONFIGURATION (for future use)
# ========================================
# Real crowd data API (when available)
REAL_API_URL=https://api.university.edu/crowd-data
REAL_API_KEY=your_api_key_here

# Use mock data until real API is available
USE_MOCK_DATA=true

# ========================================
# HOLT'S MODEL PARAMETERS
# ========================================
# Default alpha (level smoothing) - can be overridden per building
DEFAULT_ALPHA=0.2

# Default beta (trend smoothing) - can be overridden per building  
DEFAULT_BETA=0.1

# ========================================
# CORS CONFIGURATION
# ========================================
# Frontend URLs allowed to access this API
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true