# Auth Service Environment Configuration
# Copy this to .env in the auth-service directory

# Server Configuration
PORT=5004
NODE_ENV=production

# Base URL for the unified server (used for email verification links)
# In development: http://localhost:8080
# In production: https://your-domain.com
BASE_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=peraverse
DB_USER=postgres
DB_PASSWORD=your-db-password

# Email Configuration for Admin Notifications
ADMIN_EMAIL=your-admin@email.com
ADMIN_PASSWORD=your-app-password
ADMIN_NOTIFY_EMAIL=admin-approvals@your-domain.com

# CORS Settings
CORS_ORIGIN=http://localhost:8080